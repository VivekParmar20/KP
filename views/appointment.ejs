<%- include('partials/header') %>
<style>
    /* Premium styling for the appointment form */
    .appointment-form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background: #f8f7f7;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        font-family: 'Arial', sans-serif;
    }

    .appointment-form-container h1 {
        font-size: 2em;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .appointment-form-container form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .appointment-form-container input[type="text"],
    .appointment-form-container input[type="email"],
    .appointment-form-container input[type="date"],
    .appointment-form-container select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
        box-sizing: border-box;
    }

    .appointment-form-container button {
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #28a745;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .appointment-form-container button:hover {
        background-color: #218838;
    }

    .appointment-form-container .alert {
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        display: none;
    }

    .appointment-form-container .alert.success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .appointment-form-container .alert.error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="appointment-form-container">
    <h1><%= title %></h1>
    <form action="/appointment" method="POST" onsubmit="validateForm(event)">
        <input type="text" name="name" placeholder="Name" required>
        <input type="email" name="email" placeholder="Email" required>
        <input type="text" name="phone" placeholder="Phone" required>
        <select name="doctor" required>
            <% doctors.forEach(function(doc) { %>
                <option value="<%= doc.name %>"><%= doc.name %> - <%= doc.specialty %></option>
            <% }); %>
        </select>
        <input type="date" name="date" id="appointment-date" required>
        <button type="submit">Book Appointment</button>
        <div class="alert success" id="success-message">Appointment booked successfully!</div>
        <div class="alert error" id="error-message"></div>
    </form>
</div>

<script>
    function validateForm(event) {
        const dateInput = document.getElementById('appointment-date');
        const selectedDate = new Date(dateInput.value);
        const today = new Date();
        
        // Remove time part from date
        selectedDate.setHours(0, 0, 0, 0);
        today.setHours(0, 0, 0, 0);

        if (selectedDate < today) {
            showAlert('error-message', 'Invalid date: Appointment cannot be in the past.');
            event.preventDefault(); // Prevent form submission
            return;
        }

        // Check if the date falls on a weekend
        const day = selectedDate.getDay();
        if (day === 0 || day === 6) {
            showAlert('error-message', 'Invalid date: Appointments cannot be booked on weekends.');
            event.preventDefault(); // Prevent form submission
            return;
        }
    }

    function showAlert(elementId, message) {
        const alertElement = document.getElementById(elementId);
        alertElement.textContent = message;
        alertElement.style.display = 'block';
    }
</script>

<%- include('partials/footer') %>
